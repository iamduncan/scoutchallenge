    "@types/react-dom": "18.2.5",
    "@vitejs/plugin-react": "4.0.0",
    "@vitest/coverage-c8": "0.31.0",
    "autoprefixer": "10.4.14",
    "c8": "7.13.0",
    "cypress": "12.12.0",
    "cz-conventional-changelog": "3.3.0",
    "cz-customizable": "7.0.0",
