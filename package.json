    "@lexical/table": "0.10.0",
    "@lexical/utils": "0.10.0",
    "@prisma/client": "4.15.0",
    "@remix-run/express": "1.16.0",
    "@remix-run/node": "1.16.0",
    "@remix-run/react": "1.16.0",
    "@remix-run/server-runtime": "1.16.0",
    "bcryptjs": "2.4.3",
    "compression": "1.7.4",
    "cross-env": "7.0.3",
    "express": "4.18.2",
    "form-data": "4.0.0",
    "jsdom": "22.0.0",
    "lexical": "0.10.0",
    "mailgun.js": "8.2.1",
    "morgan": "1.10.0",
    "react": "18.2.0",
    "react-dom": "18.2.0",
    "tiny-invariant": "1.3.1"
